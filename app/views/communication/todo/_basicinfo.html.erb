<%= turbo_frame_tag dom_id(basicinfo) do %>
  <div>
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <div class="px-4 sm:px-0">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Nom du site web</h3>
          <p class="mt-1 text-sm text-gray-600">Aprés configuration votre site sera disponible à l'addresse suivante: <br>nom-du-site.thatsite.io</p>
        </div>
      </div>
      <div class="mt-5 md:mt-0 md:col-span-2">
        <%= form_with model: @site do |form| %>
          <div class="shadow sm:rounded-md sm:overflow-hidden">
            <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
              <div class="grid grid-cols-3 gap-6">
                <div class="col-span-3 sm:col-span-2">
                  <%= form.label 'name', "Enter your site name:", class: "block text-sm font-medium text-gray-700" %>
                  
                  <div class="mt-1 flex rounded-md shadow-sm">
                    <%= form.text_field 'name', value: basicinfo.inputs[:site_name], class: "focus:ring-indigo-500 focus:border-indigo-500 flex-1 block w-full rounded-l-md rounded-r-md sm:text-sm border-gray-300"%>  
                  </div>
                </div>

                <% @site.errors.full_messages.each do |error| %>
                  <p class="mt-1 text-sm text-gray-600"><%= error%></p>       
                <% end %>

              </div>
            </div>
            <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
              <%= fields_for :turbo_stream do |turbo_stream_form| %>
                <%= turbo_stream_form.hidden_field :klass, value: basicinfo.class.name  %>
              <% end %>
              <%= form.submit "Validé", disabled: basicinfo.status == "done", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 " + (basicinfo.status == "done" ? "bg-indigo-100" : "bg-indigo-600 hover:bg-indigo-700")%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="hidden sm:block" aria-hidden="true">
    <div class="py-5">
      <div class="border-t border-gray-200"></div>
    </div>
  </div>
<% end %>