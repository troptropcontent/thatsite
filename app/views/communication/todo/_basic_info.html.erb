<% errors = [] if local_assigns[:errors].nil? %>
<%= turbo_frame_tag dom_id(todo) do %>
  <div class="container <%= todo.status %>">
    <% unless errors.empty? %>
      <%= render "shared/errors", errors: errors %>
    <% end %>
    <%= form_with url: "/todo/basic_info", method: :put, format: :turbo_stream do |form| %>
      <%= form.label 'site[name]', "Enter your site name:" %>
      <%= form.text_field 'site[name]', value: todo.inputs[:site_name]%>
      <%= form.submit "ValidÃ©", disabled: todo.status == "done" %>
    <% end %>
  </div>
<% end %>

